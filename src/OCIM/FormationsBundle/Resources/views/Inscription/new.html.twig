{% extends '::app.html.twig' %}
{% form_theme form '::form.html.twig' %}

{% block body -%}
    <h1>Nouvel inscription à la formation</h1>
<hr/>
{{ form_errors(form) }}
{{form_start(form)}}
<h2>Le stagiaire</h2>
<div class="units-row end">
    <div class="unit-10">
	{{ form_row(form.stagiaire.civilite) }}
	</div>
	<div class="unit-90">
		<div class="units-row end">
			<div class="unit-50">{{ form_row(form.stagiaire.prenom) }}</div>
			<div class="unit-50">{{ form_row(form.stagiaire.nom) }}</div>
		</div>
	</div>
</div>

<div class="units-row end">
    <div class="unit-33">{{ form_row(form.stagiaire.fonction) }}</div>
    <div class="unit-33">{{ form_row(form.stagiaire.tel) }}</div>
    <div class="unit-33">{{ form_row(form.stagiaire.fax) }}</div>
</div>

<div class="units-row">
    <div class="unit-50">{{ form_row(form.stagiaire.mail) }}</div>
    <div class="unit-50">{{ form_row(form.stagiaire.mailAdmin) }}</div>
</div>

<h2>Adresse</h2>
<div class="units-row end">
    <div class="unit-100">{{ form_row(form.stagiaire.adresse.nomStructure) }}</div>
</div>

<div class="units-row end">
    <div class="unit-100">{{ form_row(form.stagiaire.adresse.nomStructure) }}</div>
</div>

<div class="units-row end">
    <div class="unit-50">{{ form_row(form.stagiaire.adresse.adresse) }}</div>
    <div class="unit-50">{{ form_row(form.stagiaire.adresse.adresseComplement) }}</div>
</div>

<div class="units-row">
    <div class="unit-33">{{ form_row(form.stagiaire.adresse.cP) }}</div>
    <div class="unit-33">{{ form_row(form.stagiaire.adresse.ville) }}</div>
    <div class="unit-33">{{ form_row(form.stagiaire.adresse.pays) }}</div>
</div>

<h2>Inscription</h2>
<div class="units-row end">
    <div class="unit-66">{{ form_row(form.formationformule) }}</div>
    <div class="unit-33">
		<div class='units-row end'>
			<div class='unit-66'>{{ form_row(form.dateInscription) }}</div>
			<div class='unit-33'>{{ form_row(form.statut) }}</div>
		</div>
	</div>
</div>
<div class="units-row">
    <div class="unit-100">{{ form_row(form.attentes) }}</div>
</div>

<hr/>
<div class="group">
	<div class="left"><a href="{{ path('inscription', { 'idformation': idformation }) }}" class="btn btn-smaller"><span class="oi" data-glyph="arrow-left"></span> Retour à la liste</a></div>
	<div class="right">{{ form_widget(form.submit) }}</div>
</div>

{{ form_rest(form)}}
{{ form_end(form)}}
{% endblock %}
