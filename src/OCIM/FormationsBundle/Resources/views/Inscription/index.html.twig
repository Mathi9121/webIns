			</tr>
		</thead>
		<tbody>
        {% for entity in entities %}
			{% set class = "" %}
			{% if entity.statut == 'en attente' %}
				{% set class = "attente" %}
			{% elseif entity.statut == 'accepté' %}
				{% set class = "valide" %}
			{% elseif entity.statut == 'annulé' %}
				{% set class = "annule" %}
			{% endif %}
			<tr class="statut {{class}}" data-ordre="{{entity.ordre}}" data-idinscription="{{entity.id}}">
						{% if class == "attente" %}<td class="handle"><i class="fa fa-arrows"></i></td>{% else %}<td></td>{% endif %}
						<td class="insc info"><span>{{ entity.stagiaire.nom }} ({{ entity.stagiaire.civilite }})</span></td>
						<td class="insc info"><span>{{ entity.stagiaire.prenom }}</span></td>
						<td class=""><span><abbr title="{{ entity.formationFormule.formule }}">{{ entity.formationFormule.formule.id }}</abbr></span></td>
						<td class=""><span>{{ entity.stagiaire.fonction }}</span></td>
						<td class=""><span>{% if entity.dateInscription %}{{ entity.dateInscription|date('d/m/Y') }}{% endif %}</span></td>
						<td class="text-centered">
							{% if entity.statutConvention is null %}
							<span class="label label-outline label-blue" title="Ne sais pas"><i class="fa fa-question"></i></span>
							{% elseif entity.statutConvention == false %}
							<span class="label label-outline label-red" title="Non"><i class="fa fa-times"></i></span>
							{% else %}
							<span class="label label-outline label-green" title="Demande de convention confirmée"><i class="fa fa-check"></i></span>
							{% endif %}
						</td>
                <td class="insc actions">
					<a href="#" data-tools="dropdown" data-target="#dropdown1-{{loop.index}}"></a>
					{% spaceless %}
					<ul id="dropdown1-{{loop.index}}" class="dropdown">
						<li><a href="{{ path('inscription_show', { 'id': entity.id, 'idformation':formation.id }) }}" class="inscription-href"><i class="fa fa-info fa-fw"></i>Détails</a></li>
						<li><a href="{{ path('inscription_edit', { 'id': entity.id, 'idformation':formation.id }) }}" class="inscription-href"><i class="fa fa-pencil fa-fw"></i>Modifier</a></li>
						<li>
						{% spaceless %}
							{% if entity.convention %}
