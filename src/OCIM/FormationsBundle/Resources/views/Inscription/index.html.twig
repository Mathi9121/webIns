						{# <li>
							{% if entity.signataire == null %}
								<a href="{{path('signataire_new', {'idinscription':entity.id, 'idformation': formation.id})}}" class="inscription-href"><i class="fa fa-plus fa-fw"></i>Ajouter un signataire</a>
							{% else %}
								<a href="{{path('signataire_edit', {'id': entity.signataire.id, 'idformation': formation.id})}}" class="inscription-href"><i class="fa fa-pencil fa-fw"></i>Modifier signataire</a>
							{% endif %}
						</li> #}
					</ul>
					{% endspaceless %}
