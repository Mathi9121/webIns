{% extends '::app.html.twig' %}
{% form_theme form '::form.html.twig' %}


   

{# Titres #}
{% block title %}Edition Inscription n° {{entity.id}} - {{entity.stagiaire.prenom|capitalize}} {{entity.stagiaire.nom|capitalize}}{% endblock %}
{% block titre %}Edition Inscription n° {{entity.id}} - {{entity.stagiaire.prenom|capitalize}} {{entity.stagiaire.nom|capitalize}}{% endblock %}

{% block breadcrumbs %}
<li><a href="{{ path('formation_show', { 'id': idformation }) }}">Formation : {{entity.formationformule.formation.intitule}}</a></li>
<li><a href="{{ path('inscription', { 'idformation': idformation }) }}">Inscriptions</a></li>
<li><span>Inscription n° {{entity.id}}</span></li>
{% endblock %}


{# Controls #}
{% block controls %}
{% endblock %}

{% block body -%}

{{ form_errors(form) }}
{{form_start(form)}}

<h2 class="text-centered"><i class="fa fa-graduation-cap"></i> {{entity.formationformule.formation.intitule}}</h2><hr/>

<div class="units-row">
	<div class="unit-50 panel">
		<div class="header">
			<span class="titre">Inscription</span>
				<span class="controls right group">
				</span>
		</div>
		
		<div class="panel-body">
		{{ form_row(form.dateInscription) }}
		{{ form_row(form.formationformule) }}
		{{ form_row(form.numberStatut) }}
		</div>
	</div>
	<div class="unit-50 panel">
		<div class="header">
			<span class="titre">Attentes du stagiaire</span>
				<span class="controls right group">
				</span>
		</div>
		
		<div class="panel-body">
			{{ form_widget(form.attentes) }}
		</div>
	</div>
	
</div>



<div class="units-row">
	<div class="unit-50 panel">
		<div class="header">
			<span class="titre">Le stagiaire</span>
				<span class="controls right group">
				</span>
		</div>
		
		<div class="panel-body">
			{{ form_row(form.stagiaire.civilite) }}
			{{ form_row(form.stagiaire.prenom) }}
			{{ form_row(form.stagiaire.nom) }}
			{{ form_row(form.stagiaire.fonction) }}
			{{ form_row(form.stagiaire.tel) }}
			{{ form_row(form.stagiaire.fax) }}
			{{ form_row(form.stagiaire.mail) }}
			{{ form_row(form.stagiaire.mailAdmin) }}
			
		</div>
		

	</div>
	
	<div class="panel unit-50">
		<div class="header">
			<span class="titre">Adresse</span>
				<span class="controls right group">
				
				</span>
		</div>
		
		<div class="panel-body">
			{{ form_row(form.stagiaire.adresse.nomStructure) }}
			{{ form_row(form.stagiaire.adresse.nomStructure) }}
			{{ form_row(form.stagiaire.adresse.adresse) }}
			{{ form_row(form.stagiaire.adresse.adresseComplement) }}
			{{ form_row(form.stagiaire.adresse.cP) }}
			{{ form_row(form.stagiaire.adresse.ville) }}
			{{ form_row(form.stagiaire.adresse.pays) }}
		</div>
	</div>
</div>




<div class="group">
	<div class="left"><a href="{{ path('inscription', { 'idformation': idformation }) }}" class="btn btn-smaller"><span class="oi" data-glyph="arrow-left"></span> Retour à la liste</a></div>
	<div class="right">{{ form_widget(form.submit) }}</div>
</div>

{{ form_rest(form)}}
{{ form_end(form)}}
{% endblock %}
