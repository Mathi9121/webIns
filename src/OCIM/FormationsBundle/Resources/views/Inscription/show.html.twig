{% extends '::app.html.twig' %}


{% block titre %}Inscription - {{entity.stagiaire.civilite|capitalize}} {{entity.stagiaire.prenom|capitalize}} {{entity.stagiaire.nom|capitalize}}{% endblock %}

{% block title %}Inscription - {{entity.stagiaire.civilite}} {{entity.stagiaire.prenom}} {{entity.stagiaire.nom}}{% endblock %}
{% block controls %}{{form(delete_form)}}{% endblock %}

{% block body -%}

<p class="lead text-centered"><i class="fa fa-quote-left"></i> {{ entity.attentes }} <i class="fa fa-quote-right"></i></p>

<div class="units-row">
	<div class="unit-60">
		<table>
			<caption>Inscription</caption>
			<tr>
				<th>Inscription le</th>
				<td>{{ entity.dateInscription|date('d/m/Y') }} à {{ entity.dateInscription|date('H:i:s') }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				{% set couleur = "" %}
				{% if entity.statut == 'accepté'%}
					{% set couleur = "label-green" %}
				{% elseif entity.statut == 'annulé'%}
					{% set couleur = "label-red" %}
				{% elseif entity.statut == 'en attente'%}
					{% set couleur = "label-yellow" %}
				{% endif %}
				<td><span class="label {{couleur}}">{{ entity.statut }}</span></td>
			</tr>
			<tr>
				<th>Formule</th>
				<td><strong>{{entity.formationFormule.formule.id}}</strong> - {{entity.formationFormule.formule.description|capitalize}} ({{entity.formationFormule.formule.tarif}}{{(entity.formationFormule.formule.tarif|number_format)? ' €'}})</td>
			</tr>
		</table>
	</div>
</div>

<div class="group">
    <div class="left"><a href="{{ path('inscription', {'idformation':idformation}) }}" class="btn btn-smaller">Retour</a></div>
    <div class="right"><a href="{{ path('inscription_edit', { 'id': entity.id, 'idformation': idformation }) }}" class="btn btn-green">Modifier</a></div>
</div>
{% endblock %}
