{% extends '::app.html.twig' %}

{% block body -%}
    <h1>Convention list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Edition</th>
                <th>Envoipresidentu2ex</th>
                <th>Retourpresidentu2ex</th>
                <th>Envoiorganisme2ex</th>
                <th>Retourorganisme1ex</th>
                <th>Envoipresidentu1ex</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('convention_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{% if entity.edition %}{{ entity.edition|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.envoiPresidentU2ex %}{{ entity.envoiPresidentU2ex|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.retourPresidentU2ex %}{{ entity.retourPresidentU2ex|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.envoiOrganisme2ex %}{{ entity.envoiOrganisme2ex|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.retourOrganisme1ex %}{{ entity.retourOrganisme1ex|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.envoiPresidentU1ex %}{{ entity.envoiPresidentU1ex|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('convention_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('convention_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('convention_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
