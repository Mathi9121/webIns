{% extends '::app.html.twig' %}
{% form_theme edit_form '::form.html.twig' %}

{% block  javascripts %}
{% javascripts '@OCIMFormationsBundle/Resources/public/js/Formation/formFormation.js'%}
         <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{# Titres #}
{% block title %}Nouvelle formation {% endblock %}
{% block titre %}Nouvelle formation{% endblock %}

{# Controls #}
{% block controls %}

{% endblock %}

{% block body %}

<form action="{{ path('formation_create') }}" method="post" class="forms units-row" {{ form_enctype(edit_form) }}>

<div class="units-row">

	<div class="unit-60 panel">
			<div class="header">
			<span class="titre">Formation</span>
				<span class="controls right group">
					
				</span>
		</div>
		<div class="panel-body">
			{{ form_row(edit_form.intitule) }}
			{{ form_row(edit_form.type) }}
			{{ form_row(edit_form.lieu) }}
			<div class="units-row end">
				<div class="unit-50">{{ form_row(edit_form.dateDebut) }}</div>
				<div class="unit-50">{{ form_row(edit_form.dateFin) }}</div>
			</div>
			<div class="units-row end">
				<div class="unit-70">{{ form_row(edit_form.dateText) }}</div>
				<div class="unit-30">{{ form_row(edit_form.nbHeures) }}</div>
			</div>
			
			
		</div>
	</div>
	
	<div class="unit-40 panel">
		<div class="header">
				<span class="titre">Formules liées à la formation</span>
					<span class="controls right group">
						<a href="#" class="btn btn-small ajouterFormule"><i class="fa fa-plus"></i></a>
					</span>
		</div>
		<div class="panel-body">
			{{ form_widget(edit_form.formationFormule) }}
		</div>
	</div>
</div>



		

<hr/>
<div class="group">
	<div class="left"><a href="{{ path('formation') }}" class="btn btn-smaller">Retour à la liste des formations</a></div>
	<div class="right">{{ form_row(edit_form.submit) }}</div>
</div>
{{ form_rest(edit_form) }}
</form>
{% endblock %}