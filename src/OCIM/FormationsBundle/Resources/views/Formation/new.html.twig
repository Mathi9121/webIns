{% extends '::app.html.twig' %}
{% form_theme edit_form '::form.html.twig' %}

{% block  javascripts %}
{% javascripts '@OCIMFormationsBundle/Resources/public/js/Formation/formFormation.js'%}
         <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{# Titres #}
{% block title %}Nouvelle formation {% endblock %}
{% block titre %}Nouvelle formation{% endblock %}

{# Controls #}
{% block controls %}

{% endblock %}

{% block body %}

<form action="{{ path('formation_create') }}" method="post" class="forms units-row" {{ form_enctype(edit_form) }}>

	<div class="units-row end">
		<div class="unit-75">{{ form_row(edit_form.intitule) }}</div>
		<div class="unit-25">{{ form_row(edit_form.type) }}</div>
	</div>

	<div class="units-row end">
		<div class="unit-33">{{ form_row(edit_form.lieu) }}</div>
		<div class="unit-33">{{ form_row(edit_form.dateDebut) }}</div>
		<div class="unit-33">{{ form_row(edit_form.dateFin) }}</div>
	</div>
		
	<div class="units-row end">
		<div class="unit-33">{{ form_row(edit_form.nbHeures) }}</div>
		<div class="unit-66">{{ form_row(edit_form.dateText) }}</div>
	</div>

<h3>Formules liées à la formation <a href="#" class="btn btn-small ajouterFormule"><span class="oi" data-glyph="plus"></span> Ajouter une formule</a></h3>

	<div class="units-row end">
		<div class="unit-66">{{ form_widget(edit_form.formationFormule) }}</div>
	</div>


<hr/>
	
<div class="group">
	<div class="left"><a href="{{ path('formation') }}" class="btn btn-smaller"><span class="oi" data-glyph="arrow-left"></span> Retour à la liste des formations</a></div>
	<div class="right">{{ form_row(edit_form.submit) }}</div>
</div>
{{ form_rest(edit_form) }}
</form>
{% endblock %}