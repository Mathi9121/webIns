<!DOCTYPE html>
{#{% form_theme form '::form.html.twig' %}#}
<html>
<head>

</head>
<body>
<style>
.forms div{
  padding-bottom: 8px;
}
.forms div.checkrow label{
  text-align: left;
}

.forms div label{
  width: 200px;
  display: inline-block;
  text-align:right;
}
#ocim_formationsbundle_inscription_formations label{
  text-align:left
}
label.required{
  color: red;
}
.forms .checkrow{
  display:block;
  margin-left:200px;
}
.forms .checkrow label{
  width: auto;
}
.margin-b{
  margin-bottom: 5px;
}
</style>
{{ form_start(form) }}
{{ form_errors(form) }}
{% if form.formations is defined %}
  {{ form.formations.vars.label }}
  {% for formation in form.formations %}
    <div class='checkrow'>{{ form_widget(formation) }}{{ form_label(formation) }}</div>
  {% endfor %}
{% endif %}



  {% for ff in form.formationformule %}
    {% if loop.index0 == 0 %}
      <div class="checkrow margin-b">
        {{ form.formationformule.vars.label }} :
      </div>
    {% endif %}
    <div class='checkrow'>
      {{ form_widget(ff) }}{{ form_label(ff) }}
    </div>
  {% endfor %}


{{form(form)}}

{{form_end(form)}}

</body>
</html>
