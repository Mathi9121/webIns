{% extends '::app.html.twig' %}
{% form_theme edit_form '::form.html.twig' %}

{% block javascripts %}
{{parent()}}
	<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
	{% javascripts '@OCIMExportBundle/Resources/public/js/template/*' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body -%}
	{{form_start(edit_form)}}
    
	<div class="units-row">
		<div class="unit-80">
			{{ form_row(edit_form.nom) }}
		</div>
		<div class="unit-20">
			{{ form_row(edit_form.type) }}
		</div>
	</div>
	
    
<label>Nom de fichier
<ul class="forms-inline-list">
	<li class="width-80">
		{{ form_widget(edit_form.filename) }}
	</li>
	<li>
		<a href="#" class="btn btn-smaller" data-tools="dropdown" data-target="#variables">Insérer...</a>
	</li>
</ul>
</label>
<ul id="variables" class="dropdown">
	<li><a href="#" class="variable" data-var="formation.intitule">Formation : Intitulé</a></li>
	<li><a href="#" class="variable" data-var="formation.id">Formation : Id</a></li>
		<li class="divider"></li>
	<li><a href="#" class="variable" data-var="inscription.stagiaire.nom">Inscription : Nom</a></li>
	<li><a href="#" class="variable" data-var="inscription.stagiaire.prenom">Inscription : Prénom</a></li>
		<li class="divider"></li>
	<li><a href="#" class="variable" data-var="inscription.convention.numero">Convention : Numéro</a></li>
</ul>
	{{form_row(edit_form.contenu)}}
	{{form_widget(edit_form.submit)}}
	{{form_rest(edit_form)}}
	{{form_end(edit_form)}}
	

        <ul class="record_actions">
    <li>
        <a href="{{ path('documents') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
