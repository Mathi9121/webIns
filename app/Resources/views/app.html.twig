<!DOCTYPE html>
<html>
<head>
{% image '../app/Resources/Public/img/flamme.png' %}
	<link rel="shortcut icon" type="image/png" href="{{ asset_url }}" />
{% endimage %}
	
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>OCIM-Formations | {% block title %}{% endblock %}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- STYLES -->
	{% block stylesheets %}
		{% stylesheets '../app/Resources/Public/css/*' filter='cssrewrite' %}
			<link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
		{% endstylesheets %}
	{% endblock %}
</head>
<body>


<header class="group" id="header">
<a href="{{path('home')}}"><img src="{{ asset('../app/Resources/Public/img/logo-ocim.png') }}" class="logo" alt="OCIM"/></a>
	<nav class="navbar navbar-right end">
		<ul>
			<li>
				<a href="#"><div id="user-img"><span class="oi" data-glyph="person"></span></div> {{app.user.prenom |capitalize}} {{app.user.nom |capitalize}} <span class="oi" data-glyph="caret-bottom"></span></a>
				<ul>
					<li><a href="{{path('user')}}"><span class="oi" data-glyph="people"></span> Gestion des utilisateurs</a></li>
					<li><a href="{{ path('deconnexion') }}"><span class="oi" data-glyph="power-standby"></span> Deconnexion</a></li>
				</ul>
			</li>
		</ul>
	</nav>
</header>

<div class="units-row units-split">
	<div class="unit-20">
		<nav class="nav nav-stacked">
			<ul>
				<li><a href="{{path('formation')}}">Formations</a></li>
				<li><a href="{{path('formule')}}">Formules</a></li>
				<li><a href="{{path('personne')}}">Contacts</a></li>
				<li><a href="#">Export et Gabarits</a></li>
				<li><a href="#">Rechercher</a></li>
			</ul>
		</nav> 
	</div>


	<div role="main" id="content" class="unit-80">
		<div class="unit-container" style="padding:25px">
		{% if block('titre') %}
				<h1>{% block titre %}{% endblock %}</h1>
				<hr/>
		{% endif %}

		{% block body %}{% endblock %}
		</div>
	</div>
</div>



<!-- FOOTER -->
<footer id="footer">
</footer>

<!-- SCRIPTS -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="Public/js/jquery.js"><\/script>')</script>
{% block javascripts %}
	{% javascripts '../app/Resources/Public/js/kube.min.js' %}
		<script src="{{ asset_url }}"/>
	{% endjavascripts %}
{% endblock  %}


</body>
</html>

