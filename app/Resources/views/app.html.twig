<!DOCTYPE html>
<html>
<head>
{% image '../app/Resources/Public/img/flamme.png' %}
	<link rel="shortcut icon" type="image/png" href="{{ asset_url }}" />
{% endimage %}
	
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>OCIM-Formations | {% block title %}{% endblock %}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- STYLES -->
	{% block stylesheets %}
		{% stylesheets '../app/Resources/Public/css/*' filter='cssrewrite' %}
			<link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
		{% endstylesheets %}
	{% endblock %}
</head>
<body>


<header class="group" id="header">
<a href="{{path('home')}}" class="logo"><img src="{{ asset('../app/Resources/Public/img/logo-ocim.png') }}" class="logo" alt="OCIM"/></a>
	<nav class="navbar navbar-right end">
		<div class="navigation-toggle" data-tools="navigation-toggle" data-target="#sidebar">
			<span>Menu<img src="{{ asset('../app/Resources/Public/img/logo-ocim.png') }}" class="logo" alt="OCIM"/></span>
		</div>
		<ul id="session-top">
			<li>
				<a href="#"><div id="user-img"><span class="oi" data-glyph="person"></span></div> {{app.user.prenom |capitalize}} {{app.user.nom |capitalize}} <span class="oi" data-glyph="caret-bottom"></span></a>
				<ul>
					<li><a href="{{path('user')}}"><span class="oi" data-glyph="people"></span> Gestion des utilisateurs</a></li>
					<li><a href="{{ path('deconnexion') }}"><span class="oi" data-glyph="power-standby"></span> Deconnexion</a></li>
				</ul>
			</li>
		</ul>
	</nav>
	
</header>

<div class="units-row">
	<div id="sidebar" class="unit-20">
		<form action="" class="forms">
				<div class="input-groups unit-centered width-80">
					<input type="text" name="go" placeholder="Rechercher" class="width-90"/>
					<span class="btn-append">
						<button class="btn"><i class="oi" data-glyph="magnifying-glass"></i></button>
					</span>
				</div>
		</form>
		<nav class="nav nav-stacked">			
			<ul>
				<li><a href="{{path('home')}}"><i class="oi" data-glyph="dashboard"></i>Dashboard</a></li>
				<li><a href="{{path('formation')}}"><i class="oi" data-glyph="book"></i>Formations</a></li>
				<li><a href="{{path('formule')}}"><i class="oi" data-glyph="tags"></i>Formules</a></li>
				<li><a href="{{path('personne')}}"><i class="oi" data-glyph="people"></i>Contacts</a></li>
				<li><a href="#"><i class="oi" data-glyph="file"></i>Export et Gabarits</a></li>
				<li><a href="#"><i class="oi" data-glyph="magnifying-glass"></i>Rechercher</a></li>
					<ul id="session-side">
						<li><a href="{{path('user')}}"><i class="oi" data-glyph="people"></i> Gestion des utilisateurs</a></li>
						<li><a href="{{ path('deconnexion') }}"><i class="oi" data-glyph="power-standby"></i> Deconnexion</a></li>
					</ul>
			</ul>
		</nav> 
	</div>


	<div role="main" id="content" class="unit-80 ">
	
	{% macro message(text, classes) %}
		<div class="tools-message {{ classes|default('') }}">
			{{text}}
		</div>
	{% endmacro %}
	{% macro alert(text, classes) %}
		<div class="tools-alert {{ classes|default('') }}">
			{{text}}
		</div>
	{% endmacro %}
	
		{% if block('titre') %}
			<div id="titre" class="group">
			<h1 class="left">{% block titre %}{% endblock %}</h1>
			<div id="controls" class="group right">{% block controls %}{% endblock %}</div>
			</div>
		{% endif %}
		
		{% block body %}{% endblock %}
	</div>
</div>



<!-- FOOTER -->
<footer id="footer">
</footer>

<!-- SCRIPTS -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="Public/js/jquery.js"><\/script>')</script>
{% block javascripts %}
	{% javascripts 
		'../app/Resources/Public/js/kube.min.js'
		'../app/Resources/Public/js/main.js'
	%}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock  %}

</body>
</html>

